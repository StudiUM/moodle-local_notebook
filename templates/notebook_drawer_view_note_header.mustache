{{!
    @template local_notebook/notebook_drawer_view_note_header

    This template will render the header for the note detail.

    Classes required for JS:
    * notedate

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * none

    Example context (json):
    {}

}}

<div
    class="hidden position-relative border-bottom p-1 px-sm-2"
    aria-hidden="true"
    data-region="view-note"
>
    <div data-region="header-content">
        <div class="d-flex justify-content-between">
            <div class="align-self-stretch">
                <a class="h-100 mr-2 d-flex align-items-center backtolist" href="#" data-noteid="" role="button" aria-label="{{#str}} backtolist, local_notebook {{/str}}">
                    <div class="icon-back-in-drawer">
                        <span class="dir-rtl-hide"><i class="icon fa fa-chevron-left fa-fw " aria-hidden="true"></i></span>
                    </div>
                </a>
            </div>
            <div class="d-flex align-items-center">
                <i class="icon fa fa-clock-o mr-1" aria-hidden="true"></i>
                <span class="notedate"></span>
            </div>
        </div>
    </div>
</div>