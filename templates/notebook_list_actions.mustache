{{!
    @template local_notebook/notebook_list_actions

    Template used as a template to render notebook ist actions.

    Classes required for JS:
    * none

    Context variables required for this template:
    * None
}}
<div id="note-list-actions" class="hidden" aria-live="polite">
    <div class="d-flex">
        <div class="p-2 mr-4">
            <span class="badge badge-light selected-note-count p-2" data-arialabel="{{#str}} selectednotes, local_notebook {{/str}}" aria-label="" aria-live="polite"></span>
        </div>
        <div class="p-1">
            <button id="delete-selected-notes" class="deletenote btn" type="button" title="{{#str}} delete, core {{/str}}" aria-label="{{#str}} delete, core {{/str}}">
                <i class="fa fa-trash fa-lg" aria-hidden="true"></i>
            </button>
        </div>
        <div class="ml-auto p-2">
            <button type="button" class="close" title="{{#cleanstr}} closebuttontitle {{/cleanstr}}" aria-label="{{#cleanstr}} closebuttontitle {{/cleanstr}}">
                <i class="fa fa-times" aria-hidden="true"></i>
            </button>
        </div>
    </div>
</div>
<div id="message-success-container" aria-live="assertive"></div>