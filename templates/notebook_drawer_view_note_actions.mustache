{{!
    @template local_notebook/notebook_drawer_view_note_actions

    This template will render the footer for the note detail.

    Classes required for JS:
    * editnote
    * deletenote

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * none

    Example context (json):
    {}

}}
<div
    class="view-note-actions"
>
    <div class="d-flex">
        <a class="btn btn-secondary backtolist mr-auto m-1" href="#" data-noteid="" role="button" aria-label="{{#str}} backtolist, local_notebook {{/str}}">
             <span class="dir-rtl-hide"><i class="fa fa-chevron-left fa-fw " aria-hidden="true"></i></span>
        </a>
        <button data-noteid="" aria-label="{{#str}} edit {{/str}}" class="btn btn-primary editnote m-1">
            {{#str}} edit {{/str}}
        </button>
        <button data-noteid="" aria-label="{{#str}} delete {{/str}}" class="btn btn-danger deletenote m-1">
            {{#str}} delete {{/str}}
        </button>
    </div>
</div>