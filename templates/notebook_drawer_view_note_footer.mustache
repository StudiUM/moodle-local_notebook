{{!
    @template local_notebook/notebook_drawer_view_note_footer

    This template will render the footer for the note detail.

    Classes required for JS:
    * editnote
    * deletenote

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * none

    Example context (json):
    {}

}}

<div
    class="hidden position-relative border-bottom p-1 px-sm-2"
    aria-hidden="true"
    data-region="view-note"
>
    <div data-region="footer-content">
        <div class="d-flex">
            <div class="d-flex notetags col-6">
            </div>
            <div class="d-flex buttonscontainer col-6">
                <button data-noteid=""  class="btn btn-primary editnote m-1">
                    <i class="fa fa-edit" aria-hidden="true"></i> {{#str}} edit {{/str}}
                </button>
                <button data-noteid="" class="btn btn-danger deletenote m-1">
                    <i class="fa fa-trash" aria-hidden="true"></i> {{#str}} delete {{/str}}
                </button>
            </div>
        </div>
    </div>
</div>